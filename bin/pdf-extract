#!/usr/bin/env ruby

require 'commander/import'
require_relative '../lib/pdf-extract'

program :name, 'pdf-extract'
program :version, '0.0.1'
program :description, 'PDF content extraction toolkit'

objects = ['characters', 'chunks', 'regions', 'bodies', 'titles']
semantic = ['bodies', 'titles']
views = [:xml, :pdf, :png]

chosen_objects = []

objects.each do |o|
  global_option "--#{o}" do |_|
    chosen_objects << o
  end
end

global_option "--semantic" do |_|
  semantic.each { |s| chosen_objects << s }
end

views.each do |view|
  command view.to_sym do |c|

    c.syntax = "pdf-extract #{view} [objects] filename"
    c.description = "Output selected objects as #{view.upcase}."

    c.action do |args, options|
      args.each do |filename|

        out = PdfExtract::view filename, :as => view.to_sym do |pdf|
          chosen_objects.each do |name|
            pdf.send name.to_sym
          end
        end

        base_name = File::basename(filename.sub /\.[a-zA-Z0-9]+\Z/, "")
        case view
        when :xml then say out
        when :png then out.write "#{base_name}_mask.#{view}"
        when :pdf then out.render_file "#{base_name}_mask.#{view}"
        end
        
      end
    end

  end
end
